<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorSecondaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textAppearanceButton">@style/AppTheme.Button</item>

        <item name="backgroundColor">@color/white</item>
        <item name="foregroundColor">@color/white</item>

        <item name="android:textColorPrimary">@color/darkGray</item>
        <item name="android:textColorSecondary">@color/darkGray</item>
        <item name="android:textColorTertiary">@color/colorBackgroundDark</item>
        <item name="android:textColorHint">@color/lightGray</item>

        <item name="android:ratingBarStyle">@style/AppTheme.RatingBar</item>
    </style>

    <style name="AppTheme.AppBarLayout" parent="Base.Widget.Design.AppBarLayout">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
    </style>

    <style name="AppTheme.NavigationView" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/colorSecondaryDark</item>
    </style>

    <style name="AppTheme.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- overridden in v21 -->
    <style name="AppTheme.RatingBar" parent="Widget.AppCompat.RatingBar" />


    <!-- DARK THEME-->

    <style name="AppThemeDark" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorSecondaryDark</item>
        <item name="colorPrimaryDark">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textAppearanceButton">@style/AppTheme.ButtonDark</item>

        <item name="backgroundColor">@color/black</item>
        <item name="foregroundColor">@color/darkerGray</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/colorBackgroundDark</item>
        <item name="android:textColorTertiary">@color/colorBackgroundDark</item>
        <item name="android:textColorHint">@color/lightGray</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:ratingBarStyle">@style/AppTheme.RatingBar</item>
    </style>

    <style name="AppTheme.ListView">
        <item name="android:background">@color/lightenGray</item>
    </style>

    <style name="AppTheme.ListViewDark">
        <item name="android:background">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DarkDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@color/darkerGray</item>
        <item name="android:colorBackground">@color/darkerGray</item>
    </style>

    <style name="PrefsThemeDark" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/lightGray</item>
        <item name="android:textColorTertiary">@color/lightGray</item>
        <item name="android:textColorHint">@color/colorPrimaryLight</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:background">@color/darkerGray</item>
        <item name="android:colorBackground">@color/darkerGray</item>
        <item name="android:itemBackground">@color/darkerGray</item>
        <item name="android:windowBackground">@color/darkerGray</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:textColorAlertDialogListItem">@color/white</item>
    </style>

    <style name="AppTheme.ButtonDark" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/darkerGray</item>
    </style>

</resources>
