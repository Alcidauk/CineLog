<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RatingBar
        android:id="@+id/kino_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/kino_review_text"
        android:layout_below="@id/kino_rating_bar"
        android:minHeight="300px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/kino_save_review"
        android:layout_below="@id/kino_review_text"
        android:text="@string/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/kino_cancel_review"
        android:layout_below="@id/kino_review_text"
        android:layout_alignRight="@id/kino_review_text"
        android:layout_alignEnd="@id/kino_review_text"
        android:text="@string/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>